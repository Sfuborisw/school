<Window x:Class="LottoGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LottoGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <Button x:Name="btnGame" Content="Game" Height="35" MinWidth="100" Click="btnGame_Click"/>
            <Button x:Name="btnHistory" Content="History" Height="35" MinWidth="100" Margin="10,0,0,0" Click="btnHistory_Click"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,35,0,0" />
    </Grid>
</Window>
