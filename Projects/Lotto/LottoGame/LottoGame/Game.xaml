      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:src="clr-namespace:LottoGame"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="Game">
    <Grid>
        <WrapPanel x:Name="WrapPanel1" HorizontalAlignment="Left" Height="140" Margin="76,45,0,0" VerticalAlignment="Top" Width="140">
