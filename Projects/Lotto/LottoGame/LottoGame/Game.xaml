            </WrapPanel.Background>
        </WrapPanel>
        <Button x:Name="btClear" Content="Clear" HorizontalAlignment="Left" Margin="226,45,0,0" VerticalAlignment="Top" Width="188" Height="140" Background="White" Click="btClear_Click"/>
        <Label x:Name="lb1" Content="" HorizontalAlignment="Left" Margin="76,205,0,0" VerticalAlignment="Top" Width="338" Height="75" Background="Beige"/>
